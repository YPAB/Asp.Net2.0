@{
    ViewData["Title"] = "Contacto";
}

<br>

<form >
    <div class="container" style="background-color: #eee;height:400px; width:500px; margin:auto;">
        <center><h3>@ViewData["Message"]</h3></center>
        <div class="row">
            <div class="col-sm-12">
                <label for="exampleFormControlInput1">Nomre y Apellido</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="NombreYApellido">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label for="exampleFormControlInput1">Email</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label for="exampleFormControlInput1">Asunto</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Asunto">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label for="exampleFormControlTextarea1">Comentario</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </div>

        <div class="row" style="background-color: lightgray">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </div>

    </div>
</form>
<br>