
@using ProdeFutbol.Entidades
@model List<Partido>
@{

    ViewData["Title"] = "ResultadoPartido";
}

<br /><br />
      <h3 class="text-center">Partidos</h3>
<table class="table table-hover bg-success">
    <thead >
        <tr >
            <th class="text-center" scope="col">#</th>
            <th class="text-center" scope="col">Equipo Local</th>
            <th class="text-center" scope="col">Goles Local</th>
            <th class="text-center" scope="col">Equipo Visitante</th>
            <th class="text-center" scope="col">Goles Visitante</th>
            <th class="text-center" scope="col">Informacion Del Partido</th>
        </tr>
    </thead>
    @{int contador = 1;}

        @foreach (Partido partidos in Model)
        {
       
        <tbody>
            <tr>
                <th scope="row">@contador</th>
                <td class="text-center">@partidos.EquipoLocal.Nombre</td>
                <td  class="bg-info text-center">@partidos.GolesLocal</td>
                <td class="text-center">@partidos.EquipoVisitante.Nombre</td>
                <td  class="bg-info text-center">@partidos.GolesVisitante</td>
                <td class="text-center">@partidos.InformarResultados</td>
            </tr>
           
        </tbody>
            contador = contador + 1;
        }
</table>
